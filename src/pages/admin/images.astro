---
import AdminLayout from '~/layouts/AdminLayout.astro';
import ImageManager from '~/components/admin/ImageManager.tsx';
export const prerender = false;
---

<AdminLayout title="图片管理 - 后台管理">
    <header class="flex justify-between items-center mb-8">
        <h1 class="text-3xl font-bold">图片管理</h1>
        <a href="/" class="btn btn-primary btn-soft"> 上传新图片 </a>
    </header>

    {/* The ImageManager Preact component will render all its content here */}
    <ImageManager client:load />
</AdminLayout>
